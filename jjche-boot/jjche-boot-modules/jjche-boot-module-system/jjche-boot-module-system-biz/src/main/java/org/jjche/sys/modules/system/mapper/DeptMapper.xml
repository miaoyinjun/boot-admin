<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.jjche.sys.modules.system.mapper.DeptMapper">

    <select id="selectByRoleId" resultType="org.jjche.sys.modules.system.domain.DeptDO">
        select d.* from sys_dept d, sys_roles_depts r
        where d.id = r.dept_id and r.role_id = #{role_id}
    </select>
</mapper>
